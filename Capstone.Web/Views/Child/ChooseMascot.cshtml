@model Capstone.Web.Models.ChildModel

@{
    ViewBag.Title = "Create Mascot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choose A Mascot</h2>

<p>Please choose a mascot to continue. Mascots can only be chosen once. Choose wisely!</p>

@using (Html.BeginForm("ChooseMascot", "Child", FormMethod.Post))
{
    <div class="mascotDiv">
        <img src="~/Content/images/mascots/black.png" id="mascot" />
    </div>
    <div class="mascotDiv">
        <img src="~/Content/images/mascots/brown.png" id="mascot" />
    </div>
    <div class="mascotDiv">
        <img src="~/Content/images/mascots/gray.png" id="mascot" />
    </div>
    <br />
    <div class="mascotDivButton">
        @Html.RadioButtonFor(m => m.Mascot.Mascot_Image, "black.png")
    </div>
    <div class="mascotDivButton">
        @Html.RadioButtonFor(m => m.Mascot.Mascot_Image, "brown.png")
    </div>
    <div class="mascotDivButton">
        @Html.RadioButtonFor(m => m.Mascot.Mascot_Image, "gray.png")
    </div>
    <br />
        <button id="mascotButton"> Submit </button>
}
