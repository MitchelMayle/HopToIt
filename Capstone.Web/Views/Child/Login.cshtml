@using Capstone.Web.Models.ViewModels;
@model ChildLoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Child Login";
}

<section class="formcontainer">
    <div class="formdiv">
        <h2>Child Login</h2> 
        <p>To get started playing Hop To It, have your parents sign you up!</p>

        @using (Html.BeginForm("Login", "Child", FormMethod.Post, new { id = "form" }))
        {

            <div class="form-group">
                <label>User Name</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div>
                @Html.ValidationMessage("invalid-credentials")
                @Html.ValidationMessage("no-time-remaining")
            </div>
                <button> Submit </button>
        }
    </div>
</section>